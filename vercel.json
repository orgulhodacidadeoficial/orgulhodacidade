{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.js"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|json))",
      "dest": "Frontend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "Frontend/index.html"
    }
  ],
  "env": {
    "DATA_DIR": "./data",
    "NODE_ENV": "production"
  }
}

